@{
    ViewData["Title"] = "Meals Planner";
}

@section Stylesheets
{
    <link rel="stylesheet" type="text/css" href="/lib/fullcalendar/fullcalendar.css" />
}


<div class="intro py-lg-5" style="display: inline-flex; margin-left: 40%;">
    <h2><b>@Html.ViewData["Title"]</b></h2>
    <button type="button" class="btn btn-primary ml-5" data-toggle="modal" data-target="#shoppingList">
      Get shopping list
    </button>
</div>

<div id="calendar" class="pb-lg-5 px-lg-5"></div>

<div class="modal" id="shoppingList" tabindex="-1" role="dialog">
    <form method="get">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Shopping List</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="Start">Start date</label>
                        <input id="Start" name="rawStart" class="form-control" type="date">
                    </div>
                    <div class="form-group">
                        <label for="End">End date</label>
                        <input id="End" name="rawEnd" class="form-control" type="date">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button asp-action="Show" type="submit" class="btn btn-primary">Get shopping list</button>
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts
{
    <script src="/js/sweetalert2.all.min.js"></script>
    <script src="/lib/fullcalendar/fullcalendar.js"></script>
    <script src="/js/calendar.js"></script>
}
